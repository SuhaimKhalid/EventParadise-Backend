{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",
    "rootDir": ".",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "typeRoots": ["../node_modules/@types"],
    "types": ["node"]
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist", "__tests__"]
}
