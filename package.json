{
  "name": "eventparadise-backend",
  "version": "1.0.0",
  "description": "EventParadise Backend API",
  "main": "dist/listen.js",
  "license": "MIT",
  "scripts": {
    "test": "jest --runInBand --passWithNoTests",
    "setup-db": "cross-env PGPASSWORD=1122 psql -U postgres -h localhost -f ./src/db/setup-db.sql",
    "dev": "ts-node-dev --respawn --transpile-only src/listen.ts",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node dist/listen.js",
    "db:dev": "cross-env NODE_ENV=development ts-node ./test.ts",
    "db:test": "cross-env NODE_ENV=test ts-node ./test.ts",
    "seed": "ts-node ./src/db/seeds/run-seeds.ts",
    "seed-prod": "cross-env NODE_ENV=production npm run seed"
  },
  "devDependencies": {
    "@tsconfig/node16": "^16.1.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^3.1.10",
    "pg-mem": "^2.1.2",
    "prettier": "^3.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.5",
    "@types/pg-format": "^1.0.5",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pg-format": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
