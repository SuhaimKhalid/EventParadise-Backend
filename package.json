{
  "name": "backend",
  "version": "1.0.0",
  "description": "EventParadise Backend API",
  "main": "dist/listen.js",
  "scripts": {
    "test": "jest --runInBand --passWithNoTests",
    "setup-db": "cross-env PGPASSWORD=1122 psql -U postgres -h localhost -f ./src/db/setup-db.sql",
    "dev": "ts-node-dev --respawn --transpile-only src/listen.ts",
    "build": "tsc",
    "prestart": "yarn build",
    "start": "node dist/listen.js",
    "db:dev": "cross-env NODE_ENV=development ts-node ./test.ts",
    "db:test": "cross-env NODE_ENV=test ts-node ./test.ts",
    "seed": "ts-node ./src/db/seeds/run-seeds.ts",
    "seed-prod": "cross-env NODE_ENV=production npm run seed"
  },
  "keywords": [
    "express",
    "typescript",
    "postgresql",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.7.0",
    "@types/pg": "^8.15.5",
    "@types/pg-format": "^1.0.5",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.11.0",
    "pg-format": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
